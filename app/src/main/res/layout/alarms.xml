<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" android:gravity="bottom">

    <EditText
        android:id="@+id/editTextWhen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number" android:hint="@string/when" android:text="0"/>

    <Button
        android:id="@+id/buttonShowNotification"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:onClick="onClickShowAlarm"
        android:text="@string/show_alarm" />

</LinearLayout>