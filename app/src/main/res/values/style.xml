<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="text_black">
        <item name="android:textColor">#000000</item>
    </style>

    <style name="title_rss" parent="text_black">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20dip</item>
    </style>

    <style name="description_rss" parent="text_black">
        <item name="android:textSize">12dip</item>
        <item name="android:background">@drawable/shape_background_rss_description</item>
    </style>

    <!-- the theme applied to the application or activity -->
    <style name="RojoActionBarTheme"
        parent="@android:style/Theme.Holo">
        <item name="android:actionBarStyle">@style/MyActionBar</item>
    </style>

    <!-- ActionBar styles -->
    <style name="MyActionBar"
        parent="@android:style/Widget.Holo.ActionBar">
        <item name="android:background">#ff0000</item>
    </style>
</resources>